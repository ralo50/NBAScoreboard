<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/player_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:duplicateParentState="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:elevation="8dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_effect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical|start"
            android:paddingStart="4dp"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:transitionName="playerName" />

        <TextView
            android:id="@+id/player_points"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Pts"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_rebounds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Reb"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_assists"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Ast"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_field_goals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="FG"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_free_throws"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="FT"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_three_pointers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="3Pt"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/player_minutes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Min"
            android:textAlignment="center" />
    </LinearLayout>

</android.support.v7.widget.CardView>